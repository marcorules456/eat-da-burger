<h1 style="background:black;color:white">Eat-Da-Burger!</h1>

<main>
  <div class="container">
  <div class="contain">
    <div class="row">
      <div class="col s6">
       <h4>Devour?</h4>
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
        
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Like Burgers? Add More!</h2>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Have you tried our Moody Millenial Burger?">
      <button type="submit" class="addBurgerButton">Add  Burger</button>
    </form>
    </div>
  </div>
</div>
